<?xml version="1.0" ?>
<diagram author="Francisco Simoes" name="Counter">
    <inport name="input" />
    <outport name="output" />
    <class name="MainApp" default="true">
        <attribute name="counter" type="number" init-value="0"/>
        <method name="MainApp">
            <body>
                <![CDATA[
                
                ]]>
            </body>
        </method>
        <method name="increment_counter">
            <body>
                self.counter = self.counter + 1
                print ("counter: ", self.counter)
            </body>
        </method>
        <scxml initial="state_A">
            <state id="state_A">
                <onentry>
                    <script>
                        self.increment_counter();
                    </script>
                </onentry>
                <transition target="../state_B" after="10" />
                <transition target="../state_C" after="20" />
                <transition target="../state_D" event="d" port="input" />
            </state>
            <state id="state_B">
                <onentry>
                    <script>
                        self.increment_counter();
                    </script>
                </onentry>
                <transition target="../state_A" event="move" port="input" />
            </state>
            <state id="state_C">
                <onentry>
                    <script>
                        self.increment_counter();
                    </script>
                </onentry>
                <transition target="../state_A" event="move" port="input" />
            </state>
            <state id="state_D">
                <onentry>
                    <script>
                        self.increment_counter();
                    </script>
                </onentry>
                <transition target="../state_A" event="move" port="input" />
            </state>
        </scxml>
    </class>
</diagram>